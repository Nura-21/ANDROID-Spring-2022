<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:gravity="right|center_vertical"
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ellipsize="start"
        android:fontFamily="@font/disket_regular"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:letterSpacing="-0.1" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ellipsize="end"
        android:fontFamily="@font/disket_regular"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operation"
        app:layout_constraintHeight_percent="0.2"
        android:letterSpacing="-0.1"/>

    <TextView
        android:id="@+id/btn_all"
        style="@style/ActionButton"
        android:background="#8f8f8f"
        android:text="AC"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_left"
        style="@style/ActionButton"
        android:background="#8f8f8f"
        android:text="("
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_right"
        style="@style/ActionButton"
        android:layout_marginTop="1dp"
        android:background="#8f8f8f"
        android:text=")"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_delete"
        style="@style/ActionButton"
        android:layout_marginTop="1dp"
        android:text="⌫"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_7"
        style="@style/NumberButton"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_all"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_8"
        style="@style/NumberButton"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/btn_left"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_9"
        style="@style/NumberButton"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/btn_right"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_divide"
        style="@style/ActionButton"
        android:text="÷"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_4"
        style="@style/NumberButton"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_5"
        style="@style/NumberButton"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/btn_8"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_6"
        style="@style/NumberButton"
        android:layout_marginTop="4dp"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/btn_9"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_multiply"
        style="@style/ActionButton"
        android:layout_marginTop="1dp"
        android:text="×"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/btn_divide"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_1"
        style="@style/NumberButton"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_2"
        style="@style/NumberButton"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_3"
        style="@style/NumberButton"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_plus"
        style="@style/ActionButton"
        android:layout_marginTop="1dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiply"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_0"
        style="@style/NumberButton"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_dot"
        style="@style/ActionButton"
        android:text="."
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/btn_2"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_equal"
        style="@style/ActionButton"
        android:text="="
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <TextView
        android:id="@+id/btn_minus"
        style="@style/ActionButton"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        app:layout_constraintHeight_percent="0.12">
    </TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>